{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Auth Service with Nodemon",
            "runtimeExecutable": "npx",
            "runtimeArgs": ["nodemon", "--exec", "ts-node -r ", "src/app.ts"],
            "skipFiles": ["<node_internals>/**"],
            "restart": true,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/platforms/microservices/auth-service"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug User Service with Nodemon",
            "runtimeExecutable": "npx",
            "runtimeArgs": ["nodemon", "--exec", "ts-node -r tsconfig-paths/register", "src/app.ts"],
            "skipFiles": ["<node_internals>/**"],
            "restart": true,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/platforms/microservices/user-service"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Restaurant Service with Nodemon",
            "runtimeExecutable": "npx",
            "runtimeArgs": ["nodemon", "--exec", "ts-node -r ", "src/app.ts"],
            "skipFiles": ["<node_internals>/**"],
            "restart": true,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/platforms/microservices/restaurant-service"
        }
    ],
    "compounds": [
        {
            "name": "Debug All Microservices (Nodemon)",
            "configurations": ["Debug User Service with Nodemon", "Debug Restaurant Service with Nodemon"]
        }
    ]
}
