{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@base-classes": ["../../services/base-classes/src/index"],
            "@base-classes/*": ["../../services/base-classes/src/*"],
            "@data-access-layer": ["../../services/data-access-layer/src/index"],
            "@data-access-layer/*": ["../../services/data-access-layer/src/*"],
            "message-broker-service/*": ["../../services/message-broker-service/src/*"]
        },
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
