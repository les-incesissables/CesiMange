{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@base-classes": ["../../services/base-classes/src/index"],
            "@base-classes/*": ["../../services/base-classes/src/*"],
            "@data-access-layer": ["../../services/data-access-layer/src/index"],
            "@data-access-layer/*": ["../../services/data-access-layer/src/*"]
        },
        "moduleResolution": "node",
        "target": "ES2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "outDir": "./dist"
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
